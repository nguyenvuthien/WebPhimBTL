                            <i class="mdi mdi-contacts menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @await Component.InvokeAsync("LoaiPhimMenu")
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="PhimAdmin" asp-action="DanhSachTrailer">
                            <span class="menu-title">Danh sách trailer</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="DanhSachUser">
                            <span class="menu-title">User</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../../pages/tables/basic-table.html">
                            <span class="menu-title">Tables</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item sidebar-actions">
                        <span class="nav-link">
                            <div class="border-bottom">
                                <h6 class="font-weight-normal mb-3">Projects</h6>
                            </div>
                            <button class="btn btn-block btn-lg btn-gradient-primary mt-4">+ Add a project</button>
                            <div class="mt-4">
                                <div class="border-bottom">
                                    <p class="text-secondary">Categories</p>
                                </div>
                                <ul class="gradient-bullet-list mt-4">
                                    <li>Free</li>
                                    <li>Pro</li>
                                </ul>
                            </div>
                        </span>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid d-flex justify-content-between">
                        <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © bootstrapdash.com 2021</span>
                        <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin template</a> from Bootstrapdash.com</span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../_layoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../_layoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../_layoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../_layoutAdmin/assets/js/misc.js"></script>
    <script>
        $('.search-btn').click(() => {
            let value = $('#text-search').val()
            let urlSearch = 'https://localhost:7050/api/searchAPI?q=' + value
            str = '';
            $.ajax({
                type: 'GET',
                url: urlSearch,
                dataType: 'json',
                success: function (data) {
                    str += `    <p>
                    <a href="/admin/ThemPhimMoi">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                               TenPhim
                            </th>
                            <th>
                               Anh
                            </th>
                            <th>
                                NgayKhoiChieu
                            </th>

                            <th>
                               QuocGia
                            </th>
                            <th>
                                GioiHanDoTuoi
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>`
                    $.each(data, function (key, val) {


                        str += `<tr class="">
                    <td>
                       ${val.tenPhim}
                    </td>
                    <td>
                       <img style="width:50px;height:50px" src="${val.Anh}?v=1" alt="">
                    </td>
                    <td>
                         ${val.ngayKhoiChieu}
                    </td>

                    <td>
                        ${val.quocGia}
                    </td>
                    <td>
                               ${val.gioiHanDoTuoi}
                    </td>

                    <td>
                                    <a href="/admin/SuaPhim?maPhim=${val.maPhim}">Edit</a> |
                                    <a href="/admin/DanhSachTapPhim?maPhim=${val.maPhim}" >Details</a> |
                                    <a href="/admin/XoaPhim?maPhim=${val.maPhim}">Delete</a> |
                                            <a href="/admin/MenuCacPhim?maPhim=${val.maPhim}" >Comment</a>
                    </td>
                </tr>

           `

                    })
                    str += ` </tbody>
                                        </table>`
                    $('.main-panel').html(str)
                },
                Error: function (ex) {
                    alter(ex.responseText)
                }
            })
        }
        )
    </script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
</body>
</html>