						<h4>01. Profile details</h4>
						<div class="row">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<input type="hidden" asp-for="MaTaiKhoan" />
							<div class="col-md-6 form-it">

								<label asp-for="TenTaiKhoan" class="control-label"></label>
								<input asp-for="TenTaiKhoan" class="form-control" />
								<span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
								@*
								<label>Tên tài khoản</label>
								<input type="text" placeholder="Username">*@

							</div>
							<div class="col-md-6 form-it">

								<input type="hidden" asp-for="PassWord" class="form-control" />
								@*
								<label>Tên tài khoản</label>
								<input type="text" placeholder="Username">*@

							</div>
							<div class="col-md-6 form-it">
								<label asp-for="Email" class="control-label"></label>
								<input asp-for="Email" class="form-control" />
								<span asp-validation-for="Email" class="text-danger"></span>

								@*<input type="text" placeholder="edward@kennedy.com">*@
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 form-it">

								<label asp-for="SoDt" class="control-label"></label>
								<input asp-for="SoDt" class="form-control" />
								<span asp-validation-for="SoDt" class="text-danger"></span>
								@*<label>Số DT</label>
								<input type="text" placeholder="Edward ">*@
							</div>
							<div class="col-md-6 form-it">
								<label asp-for="Anh" class="control-label"></label>
								<input asp-for="Anh" class="form-control" />
								<span asp-validation-for="Anh" class="text-danger"></span>
								@*<label>Ảnh</label>
								<input type="text" placeholder="Kennedy">*@
							</div>
							<div class="col-md-6 form-it">
								<label asp-for="PhanQuyen" class="control-label"></label>
								<input asp-for="PhanQuyen" class="form-control" value="1"/>
								<span asp-validation-for="PhanQuyen" class="text-danger"></span>
							</div>
							<div class="col-md-6 form-it">
								<label asp-for="IsDeleted" class="control-label"></label>
								<input asp-for="IsDeleted" class="form-control" value="1" />
								<span asp-validation-for="Anh" class="text-danger"></span>
								@*<label>Ảnh</label>
								<input type="text" placeholder="Kennedy">*@
							</div>
						</div>
